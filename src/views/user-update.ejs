<body>
  <div class='user-info-container'>
    <div class='container'>
    <div class="row">
      <h1 class="mt-3">Update a new user</h1>
    <form action="/user/update-user" method="POST">
  <input hidden value=<%= userData.id %> name="id"></input>
  <div class="form-group mt-3 col-6 mb-3">
    <label for="email">Email address</label>
    <input type="email" class="form-control" id="email require"
    aria-describedby="emailHelp" placeholder="Enter email" name="email"
    value="<%=userData.email %>">
  </div>
  <div class='col-6'></div>
    <div class='col-6'></div>
  <div class="form-group col-6 mb-3">
    <label for="username">User name</label>
    <input type="text" class="form-control" id="username" placeholder="Password"
    name="username" require value="<%=userData.username %>">
  </div>
    <div class='col-12'>
  <button type="submit" class="btn btn-primary">Update</button>
  </div>
    </div>
    </form>
</div>
  </div>
</body>
